extends ./../layouts/header.pug


block title
    title= title 



block cssLink
    link(rel="stylesheet", href="/css/signin.min.css")



block jsScript
    script(src="/js/signin.js" defer) 



block bodyContent
    .signin-section
        .wrapper
            .signin-wrapper
                div.social-icon
                    i.fab.fa-twitter

                h2 Sign in

                form(action='/signin', method="post")

                    label(for="userName") User Name or Email

                    .user-input 
                        i.user-icon.fas.fa-user
                        input#userName(type="text", name="userName"  class="form-control", value= user.userName )
                    
                    if error.userName
                        p.error.userName-error #{error.userName.msg}


                    label(for="password")  Password

                    .user-input 
                        i.user-icon.fas.fa-lock
                        input#password(type="password", name="password"  class="form-control" value=error.password ? "" : user.password)
                    
                    if error.password
                        p.error.userName-error #{error.password-msg} 

                    input(type="submit", value="Sign In" class="form-control signin-btn")

                .disclaimer 
                    p.disclaim New User? 
                        a(href='/signup') Sign up here

                    p.disclaim
                        a(href="/resetPassword") Forget Password?